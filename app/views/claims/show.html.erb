<p id="notice"><%= notice %></p>

<p>
  <b>Claim type:</b>
  <%= @claim.claim_type %>
</p>

<p>
  <b>Active:</b>
  <%= @claim.active %>
</p>

<p>
  <b>Claim location postcode:</b>
  <%= @claim.claim_location_postcode %>
</p>

<p>
  <b>Cost:</b>
  <%= @claim.cost %>
</p>

<p>
  <b>Date of loss:</b>
  <%= @claim.date_of_loss %>
</p>

<%= link_to 'Edit', edit_claim_path(@claim) %> | <%= link_to 'Back', claims_path %>

<h2>Current customers for this claim</h2> 

<% if @claim.customers.empty? %>
  <h3>No customers</h3> 
<% else -%>
  <table>
    <tr>
      <th>name</th>
      <th>postcode</th>
      <th>phone</th>
      <th>date of birth</th>
    </tr>
  <%= @claim.customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.postcode %></td>
      <td><%= customer.phone %></td>
      <td><%= customer.dob %></td>
    </tr>
  <% end %>
  </table>
<% end -%>

